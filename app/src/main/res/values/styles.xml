<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--通用popupWindow动画-->
    <style name="CustomPopupWindow_Anim_Style">
        <item name="android:windowEnterAnimation">@anim/menu_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/menu_exit_anim</item>
    </style>
    <!-- Dialog从底部弹出动画 -->
    <style name="animTranslateBottom" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/translate_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/translate_out_bottom</item>
    </style>
</resources>
